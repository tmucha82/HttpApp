{
  "openapi": "3.0.2",
  "info": {
    "title": "SOAF - IKO highway",
    "description": "IKO API for SOAF System",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/rest/1.0",
      "description": "local server"
    }
  ],
  "paths": {
    "/vehicle/synchronization-errors": {
      "post": {
        "summary": "Sending vehicle list, that cannot be synchronized.",
        "operationId": "submitSynchronizationErrors",
        "requestBody": {
          "$ref": "#/components/requestBodies/synchronizationErrorsSubmitPost"
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/synchronizationErrorsPost200"
          },
          "400": {
            "$ref": "#/components/responses/post400"
          },
          "401": {
            "$ref": "#/components/responses/post401"
          },
          "404": {
            "$ref": "#/components/responses/post404"
          }
        }
      }
    },
    "/passage/payments-register": {
      "post": {
        "summary": "Sending passage list for order payments",
        "operationId": "submitPaymentsRegister",
        "requestBody": {
          "$ref": "#/components/requestBodies/paymentsRegisterSubmitPost"
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/paymentsRegisterPost200"
          },
          "400": {
            "$ref": "#/components/responses/post400"
          },
          "401": {
            "$ref": "#/components/responses/post401"
          },
          "404": {
            "$ref": "#/components/responses/post404"
          }
        }
      }
    }
  },
  "components": {
    "responses": {
      "post400": {
        "description": "Bad Request (global error)",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/GlobalErrorResponse"
            }
          }
        }
      },
      "post401": {
        "description": "Unauthorized (global error)",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/GlobalErrorResponse"
            }
          }
        }
      },
      "post404": {
        "description": "Not Found (global error)",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/GlobalErrorResponse"
            }
          }
        }
      },
      "synchronizationErrorsPost200": {
        "description": "success response",
        "content": {
          "application/json": {
            "schema": {
              "type": "object"
            }
          }
        }
      },
      "paymentsRegisterPost200": {
        "description": "success response",
        "content": {
          "application/json": {
            "schema": {
              "type": "object"
            }
          }
        }
      }
    },
    "requestBodies": {
      "synchronizationErrorsSubmitPost": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/SynchronizationErrorsSubmitRequest"
            }
          }
        }
      },
      "paymentsRegisterSubmitPost": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/PaymentsRegisterRequest"
            }
          }
        }
      }
    },
    "schemas": {
      "GlobalErrorResponse": {
        "description": "Object represents secition with error structure",
        "type": "object",
        "properties": {
          "code": {
            "description": "Error code",
            "type": "string"
          },
          "message": {
            "description": "Error message",
            "type": "string"
          }
        }
      },
      "SynchronizationError": {
        "description": "Vehicle synchronization error definition",
        "type": "object",
        "required": [
          "externalId",
          "licensePlate",
          "highway",
          "lastModified",
          "code"
        ],
        "properties": {
          "externalId": {
            "description": "External identifier - PID",
            "example": "60655095",
            "type": "string",
            "minLength": 8,
            "maxLength": 32
          },
          "licensePlate": {
            "description": "Recognized License Plate",
            "example": "WE063HS",
            "type": "string",
            "minLength": 4,
            "maxLength": 10
          },
          "highway": {
            "example": "A1",
            "description": "Highway name. Value defined in DICT_HIGHWAY",
            "type": "string"
          },
          "highwayDesc": {
            "example": "Autostrada A1",
            "description": "Value translated by DICT_HIGHWAY",
            "type": "string"
          },
          "lastModified": {
            "example": "2018-12-03T06:31:00.950+0100",
            "description": "Last modify time of the vehicle.",
            "type": "string",
            "format": "date-time"
          },
          "errorCode": {
            "example": "SOAF-SYNC12",
            "description": "SOAF error code assigned in synchronization process. Value defined in DICT_ERROR_CODE",
            "type": "string"
          },
          "errorMessage": {
            "example": "Unable to connect with highway operator",
            "description": "Information about synchronization failure",
            "type": "string"
          }
        }
      },
      "PaymentRegisterItem": {
        "description": "Request of exit message",
        "type": "object",
        "required": [
          "passageId",
          "senderAccount",
          "senderExternalId",
          "recipientAccount",
          "recipientExternalId",
          "exitTransactionId",
          "entryBarrier",
          "entryTime",
          "exitBarrier",
          "highway",
          "exitTime",
          "currency",
          "grossAmount",
          "netAmount",
          "vatAmount",
          "vatRate",
          "country",
          "licensePlate",
          "vehicleClass",
          "entryTransactionId",
          "isRepeated",
          "isCorrection",
          "paymentType",
          "type"
        ],
        "properties": {
          "passageId": {
            "example": 3433,
            "description": "passage identifier",
            "type": "integer",
            "format": "int32"
          },
          "correctionId": {
            "example": 77,
            "description": "correction identifier",
            "type": "integer",
            "format": "int32"
          },
          "invoiceNumber": {
            "description": "Correction Invoice number.",
            "example": "00000007/20/10/A4",
            "type": "string",
            "minLength": 8,
            "maxLength": 32
          },
          "senderAccount": {
            "example": "49102055610000320200184444",
            "description": "Account number - format NRB. Client accountNumber or FINAT for return",
            "type": "string",
            "minLength": 26,
            "maxLength": 26
          },
          "senderExternalId": {
            "description": "External identifier - client PID or FINAT",
            "example": "60654444",
            "type": "string",
            "minLength": 8,
            "maxLength": 32
          },
          "recipientAccount": {
            "example": "49102055610000320200189027",
            "description": "Account number - format NRB. Client accountNumber or FINAT for return",
            "type": "string",
            "minLength": 26,
            "maxLength": 26
          },
          "recipientExternalId": {
            "description": "External identifier - client PID or FINAT",
            "example": "60655095",
            "type": "string",
            "minLength": 8,
            "maxLength": 32
          },
          "exitTransactionId": {
            "example": "20200317170730330500554252",
            "description": "Unique transaction identifier",
            "type": "string",
            "minLength": 0,
            "maxLength": 26
          },
          "entryBarrier": {
            "example": "112",
            "description": "Entry toll plaza unique identifier. Value defined in DICT_PASSAGE_BARRIER",
            "type": "string",
            "minLength": 1,
            "maxLength": 3
          },
          "entryBarrierDesc": {
            "description": "Value translated by DICT_PASSAGE_BARRIER",
            "example": "SPO Stanisławie",
            "type": "string"
          },
          "entryTime": {
            "description": "Date and time of entry in ISO8601 format",
            "example": "2018-12-03T04:25:00.950+0100",
            "type": "string",
            "format": "date-time"
          },
          "exitBarrier": {
            "example": "124",
            "description": "Exit toll plaza unique identifier. Value defined in DICT_PASSAGE_BARRIER",
            "type": "string",
            "minLength": 1,
            "maxLength": 3
          },
          "exitBarrierDesc": {
            "description": "Value translated by DICT_PASSAGE_BARRIER",
            "example": "SPO Stanisławie",
            "type": "string"
          },
          "highway": {
            "example": "A1",
            "description": "Highway name. Value defined in DICT_HIGHWAY",
            "type": "string"
          },
          "highwayDesc": {
            "example": "Autostrada A1",
            "description": "Value translated by DICT_HIGHWAY",
            "type": "string"
          },
          "exitTime": {
            "description": "Date and time of exit in ISO 8601 format",
            "example": "2018-12-03T06:31:00.950+0100",
            "type": "string",
            "format": "date-time"
          },
          "currency": {
            "description": "Currency of payment in ISO4217",
            "example": "PLN",
            "type": "string"
          },
          "grossAmount": {
            "description": "Gross amount - value with 2 decimal places.",
            "example": "29.70",
            "type": "number",
            "format": "double"
          },
          "netAmount": {
            "description": "Netto amount - value with 2 decimal places.",
            "example": "24.15",
            "type": "number",
            "format": "double"
          },
          "vatAmount": {
            "description": "VAT amount - value with 2 decimal places.",
            "example": "5.55",
            "type": "number",
            "format": "double"
          },
          "vatRate": {
            "description": "VAT percentage without decimal points.",
            "example": 23,
            "type": "integer",
            "format": "int32"
          },
          "country": {
            "description": "Country code. Value defined in DICT_COUNTRY",
            "example": "PL",
            "type": "string"
          },
          "countryDesc": {
            "description": "Value translated by DICT_COUNTRY",
            "example": "Polska",
            "type": "string"
          },
          "licensePlate": {
            "description": "Recognized License Plate",
            "example": "WE063HS",
            "type": "string",
            "minLength": 4,
            "maxLength": 10
          },
          "vehicleClass": {
            "description": "Class associated with the license plate in the White List. Value defined in DICT_VEHICLE_CLASS",
            "example": 2,
            "type": "integer",
            "format": "int32"
          },
          "entryTransactionId": {
            "example": "20190917170730330500334252",
            "description": "Entry transaction identifier. Can be the same as transactionId when highway does not usesections.Can be 'UNKNOWN'",
            "type": "string",
            "minLength": 0,
            "maxLength": 26
          },
          "isRepeated": {
            "description": "Flag - is payment repeated",
            "example": true,
            "type": "boolean"
          },
          "isCorrection": {
            "description": "Flag - is correction",
            "example": true,
            "type": "boolean"
          },
          "paymentType": {
            "description": "Payment type, alloved values [CLIENT,FINAT]",
            "example": "CLIENT",
            "type": "string",
            "minLength": 5,
            "maxLength": 10
          },
          "type": {
            "description": "Passage type. Value defined in DICT_PASSAGE_TYPE",
            "example": "PASSAGE",
            "type": "string",
            "minLength": 1,
            "maxLength": 30
          },
          "blockadeNumber": {
            "example": "18475",
            "description": "IKO payment blockade number",
            "type": "string",
            "minLength": 1,
            "maxLength": 10
          }
        }
      },
      "ControlInfo": {
        "description": "Request of entry",
        "type": "object",
        "properties": {
          "totalItems": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "SynchronizationErrorsSubmitRequest": {
        "description": "Request of entry",
        "type": "object",
        "required": [
          "vehicles",
          "control"
        ],
        "properties": {
          "vehicles": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/SynchronizationError"
            }
          },
          "control": {
            "$ref": "#/components/schemas/ControlInfo"
          }
        }
      },
      "PaymentsRegisterRequest": {
        "description": "Request of entry",
        "type": "object",
        "required": [
          "payments",
          "control"
        ],
        "properties": {
          "payments": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PaymentRegisterItem"
            }
          },
          "control": {
            "$ref": "#/components/schemas/ControlInfo"
          }
        }
      }
    }
  }
}
